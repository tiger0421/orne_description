<?xml version="1.0"?>

<robot name="orne_alpha" xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- Constants for robot dimensions -->
  <xacro:property name="PI" value="3.1415926535897931"/>

  <!-- Import Rviz colors -->
  <xacro:include filename="$(find orne_description)/urdf/robots/materials.xacro" />
  <xacro:include filename="$(find orne_description)/urdf/robots/orne_alpha.gazebo.xacro"/>

  <xacro:include filename="$(find orne_description)/urdf/sensors/imu.urdf.xacro"/>
  <xacro:include filename="$(find orne_description)/urdf/sensors/hokuyo.urdf.xacro"/>

  <!-- Setting for imu -->
  <xacro:sensor_imu name="imu" parent="base_link" size="0.05 0.05 0.05">
    <origin xyz="-0.145 0.0 0.21" rpy="0 3.14 0"/>
  </xacro:sensor_imu>

  <!-- Setting for 2D URG -->
  <xacro:sensor_hokuyo name="hokuyo" parent="base_link">
    <origin xyz="0.212 0 0.2485" rpy="0 0 0"/>
  </xacro:sensor_hokuyo>

  <!-- Setting for Velodyne -->
  <xacro:include filename="$(find orne_description)/urdf/sensors/vlp16.urdf.xacro"/>
  <xacro:VLP-16 name="velodyne" parent="base_link">
    <origin xyz="0.098 0.0 0.422" rpy="0 0 -0.12"/>
  </xacro:VLP-16>

<!-- Setting for ORNE alpha -->
  <!-- Base Link -->
  <link name="base_link">
    <collision>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
           <box size=".40 .45 .134"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0.1 0 0.1" rpy="0 0 0"/>
      <geometry>
           <box size=".40 .45 .134"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <collision>
      <origin xyz="0.005 0 0.305" rpy="0 0 0"/>
      <geometry>
           <box size=".376 .45 .134"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0.005 0 0.305" rpy="0 0 0"/>
      <geometry>
           <box size=".376 .45 .134"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <collision name="collision">
      <origin xyz="0.301 -0.141 0.075" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder  length="0.03" radius="0.075"/>
      </geometry>
    </collision>
    <visual name="visual">
      <origin xyz="0.301 -0.141 0.075" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder  length="0.03" radius="0.075"/>
      </geometry>
    </visual>

    <collision name="collision">
      <origin xyz="0.301 0.141 0.075" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder  length="0.03" radius="0.075"/>
      </geometry>
    </collision>
    <visual name="visual">
      <origin xyz="0.301 0.141 0.075" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder  length="0.03" radius="0.075"/>
      </geometry>
    </visual>

    <inertial>
       <mass value="15" />
       <origin xyz="0 0 0" rpy="0 0 0"/>
       <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
  </link>

  <link name="visual_left_wheel">
    <visual name="visual">
      <origin xyz="0 0.0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder  length="0.03" radius="0.151"/>
      </geometry>
    </visual>
  </link>

  <joint type="fixed" name="visual_left_wheel_hinge">
    <origin xyz="-0.045 0.233 0.1518" rpy="0 0 0"/>
    <child link="visual_left_wheel">visual_left_wheel</child>
    <parent link="base_link">base_link</parent>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="left_wheel">
    <collision name="collision">
      <origin xyz="0 0.0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
         <cylinder  length="0.03" radius="0.151"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1" />
      <origin xyz="0 0.0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>
  </link>

  <joint type="revolute" name="left_wheel_hinge">
    <origin xyz="-0.045 0.223 0.1518" rpy="0 0 0"/>
    <child link="left_wheel">left_wheel</child>
    <parent link="base_link">base_link</parent>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="100.0"  lower="-5000" upper="5000" />
  </joint>

  <link name="visual_right_wheel">
    <visual name="visual">
      <origin xyz="0 0.0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder  length="0.03" radius="0.151"/>
      </geometry>
    </visual>
  </link>

  <joint type="fixed" name="visual_right_wheel_hinge">
    <origin xyz="-0.045 -0.223 0.1518" rpy="0 0 0"/>
    <child link="visual_right_wheel">visual_right_wheel</child>
    <parent link="base_link">base_link</parent>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="right_wheel">
    <collision name="collision">
      <origin xyz="0 0.0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
         <cylinder  length="0.03" radius="0.151"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1" />
      <origin xyz="0 0.0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>
  </link>

  <joint type="revolute" name="right_wheel_hinge">
    <origin xyz="-0.045 -0.223 0.1518" rpy="0 0 0"/>
    <child link="right_wheel">right_wheel</child>
    <parent link="base_link">base_link</parent>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="100.0"  lower="-5000" upper="5000" />
  </joint>

  <transmission name="tran1">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_wheel_hinge">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
  <actuator name="left_motor">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="tran2">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_wheel_hinge">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
  <actuator name="right_motor">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>
</robot>
